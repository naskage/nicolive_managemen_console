<%- model_class = LiveProgram -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:live_id) %>:</strong></dt>
  <dd><%= @live_program.live_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:started_at) %>:</strong></dt>
  <dd><%= @live_program.started_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
  <dd><%= @live_program.user %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @live_program.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @live_program.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @live_program.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player_status) %>:</strong></dt>
  <dd><%= @live_program.player_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dl_status) %>:</strong></dt>
  <dd><%= @live_program.dl_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flv) %>:</strong></dt>
  <dd><%= @live_program.flv %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mp4) %>:</strong></dt>
  <dd><%= @live_program.mp4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flv_url) %>:</strong></dt>
  <dd><%= @live_program.flv_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mp4_url) %>:</strong></dt>
  <dd><%= @live_program.mp4_url %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              live_programs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_live_program_path(@live_program), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              live_program_path(@live_program),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
